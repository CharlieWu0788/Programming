{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build (MSVC via VsDevCmd)",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/d",
        "/c",
        "\"\"C:\\Program Files\\Microsoft Visual Studio\\18\\Community\\Common7\\Tools\\VsDevCmd.bat\" -no_logo && cl /nologo /EHsc /std:c++17 \\\"${file}\\\"\""
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
